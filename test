    <script>
        // --- D3 CHART IMPLEMENTATION START ---
        function renderVarianceChart() {
            // Generate 10 random variance numbers between 0 and 1
            const data = Array.from({ length: 10 }, (_, i) => ({
                step: i + 1,
                variance: Math.random() // Random value between 0 and 1
            }));

            const container = d3.select("#wrist-chart");
            
            // Fixed dimensions of the parent div
            const containerWidth = 150;
            const containerHeight = 200;
            
            // Calculate height taken up by text elements and padding within the 200px container:
            // p-3 padding top/bottom = 24px (12px top, 12px bottom)
            // 3 lines of text (approx 16px height each) + margins = ~50px
            // Total estimated vertical space consumed by text/margins/padding: 24 (p-3) + 50 (text/margins) = 74px
            // Let's use a reliable estimate for the remaining chart area.
            
            // Estimate chart area based on total height (200px) minus header/padding (approx 50px)
            const margin = { top: 2, right: 2, bottom: 2, left: 2 };
            const width = 150 - 2 * 12 - margin.left - margin.right; // 150px - 24px padding = 126px width
            const height = 200 - 12 - 12 - 50; // Total 200 - padding - (text height estimate) = 176px - 50px = 126px height
            
            // Adjusted height calculation based on inspection of text lines in HTML structure:
            // p-3 padding: 6px top / 6px bottom (Tailwind p-3 ≈ 0.75rem ≈ 12px)
            // Text lines (Wrist Telemetry, No Data Found, Action Variance) + margins are about 50px total.
            // Safe Chart Height: 200 (Total) - 50 (Text/Padding/Margin Overhead) = 150px.
            const calculatedHeight = 150; 
            const calculatedWidth = 150; // Use fixed 150px width of container for simplicity

            const finalWidth = calculatedWidth - 2 * 12 - margin.left - margin.right; // 150 - 24 = 126
            const finalHeight = calculatedHeight - 2 * 6; // 150 - 12 = 138 (Need to adjust internal D3 calculation to account for text)

            // Let's go with the calculation based on the total 200px height minus estimated text space.
            const chartAreaHeight = 200 - 55; // 55px overhead estimate for text/paddings
            const chartAreaWidth = 150 - 24; // 150px container width - 2*12px horizontal padding

            const svg = container
                .attr("width", chartAreaWidth)
                .attr("height", chartAreaHeight)
                .append("g")
                .attr("transform", `translate(0, 0)`);

            // X scale: maps steps (1-10) to pixel width
            const xScale = d3.scaleLinear()
                .domain(d3.extent(data, d => d.step))
                .range([0, chartAreaWidth]);

            // Y scale: maps variance (0-1) to pixel height (inverted for SVG)
            const yScale = d3.scaleLinear()
                .domain([0, 1])
                .range([chartAreaHeight, 0]);

            // Line generator
            const line = d3.line()
                .x(d => xScale(d.step))
                .y(d => yScale(d.variance))
                .curve(d3.curveMonotoneX); // Smooth the line

            // Add the area underneath the line
            const area = d3.area()
                .x(d => xScale(d.step))
                .y0(chartAreaHeight)
                .y1(d => yScale(d.variance))
                .curve(d3.curveMonotoneX);

            svg.append("path")
                .datum(data)
                .attr("fill", "rgba(139, 92, 246, 0.3)") /* Violet-500 with opacity */
                .attr("d", area);

            // Add the line path
            svg.append("path")
                .datum(data)
                .attr("fill", "none")
                .attr("stroke", "rgba(139, 92, 246, 1)") /* Violet-500 */
                .attr("stroke-width", 2)
                .attr("d", line);

            // Add circles for data points (optional, for detail)
            svg.selectAll("circle")
                .data(data)
                .enter()
                .append("circle")
                .attr("cx", d => xScale(d.step))
                .attr("cy", d => yScale(d.variance))
                .attr("r", 3)
                .attr("fill", "white")
                .attr("stroke", "rgba(139, 92, 246, 1)")
                .attr("stroke-width", 1.5);
        }
        // --- D3 CHART IMPLEMENTATION END ---

        // Mock Backend Camera Data (This would come from your JSON payload)
        const cameraConfig = [
            { id: 'main-head', label: 'MAIN HEAD CAMERA', role: 'primary' },
            { id: 'right-arm', label: 'RIGHT ARM CAMERA', role: 'auxiliary' },
            { id: 'left-arm', label: 'LEFT ARM CAMERA', role: 'auxiliary' },
            { id: 'wrist-cam', label: 'WRIST CAMERA', role: 'auxiliary' },
            { id: 'side-cam-1', label: 'SIDE CAM 1', role: 'auxiliary' },
            { id: 'side-cam-2', label: 'SIDE CAM 2', role: 'auxiliary' },
            { id: 'side-cam-3', label: 'SIDE CAM 3', role: 'auxiliary' },
        ];

        // This is now static, based on backend configuration
        const currentPrimaryCameraId = cameraConfig.find(c => c.role === 'primary').id;

        // Function to initialize the UI based on camera config
        function initializeCameras() {
            // 1. Set the initial primary camera based on the config
            updateMainCamera(currentPrimaryCameraId);
            
            // 2. Render auxiliary views
            renderAuxiliaryViews();

            // 3. Render the variance chart
            renderVarianceChart();
        }

        // Function to update the main camera display (remains the main head cam)
        function updateMainCamera(primaryId) {
            const newMainCamera = cameraConfig.find(c => c.id === primaryId);

            if (!newMainCamera) return;

            // Update the main video label/placeholder
            document.getElementById('main-camera-label').textContent = newMainCamera.label + ' (Live Stream)';
            
            console.log(`Primary Camera set to: ${newMainCamera.label}`);
        }

        // Function to render the auxiliary camera grid (now in the side panel)
        function renderAuxiliaryViews() {
            const auxCamContainer = document.getElementById('auxiliary-views-container');
            auxCamContainer.innerHTML = '';

            const auxiliaryCameras = cameraConfig.filter(c => c.id !== currentPrimaryCameraId);

            auxiliaryCameras.forEach(camera => {
                const cameraDiv = document.createElement('div');
                // Use w-40 flex-shrink-0 for horizontal scrolling on mobile, w-full lg:w-full for desktop
                cameraDiv.className = 'flex-shrink-0 w-40 lg:w-full relative aspect-video rounded-lg overflow-hidden shadow-lg border border-gray-700/50'; 
                
                const cameraLabelShort = camera.label.replace(' CAMERA', '').replace('MAIN ', '');

                cameraDiv.innerHTML = `
                    <div class="camera-video-placeholder">
                        ${camera.label} Video Feed
                        <!-- Actual WebRTC <video> element for this auxiliary feed goes here -->
                    </div>
                    <!-- Overlay Title -->
                    <div class="absolute top-0 left-0 p-2 bg-gray-900/50 text-xs font-semibold rounded-br-lg z-10">
                        ${cameraLabelShort}
                    </div>
                `;
                auxCamContainer.appendChild(cameraDiv);
            });
        }

        // Initialize on load
        window.onload = initializeCameras;

    </script>
</body>
